<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/constraintLayout2"
    android:background="@color/colorPrimary">

    <ImageView
        android:src="@drawable/fam_logo"
        android:layout_width="319dp"
        android:layout_height="252dp"
        android:id="@+id/imageView2"
        app:layout_constraintLeft_toLeftOf="@+id/constraintLayout2"
        app:layout_constraintTop_toTopOf="@+id/constraintLayout2"
        app:layout_constraintRight_toRightOf="@+id/constraintLayout2"
        app:layout_constraintBottom_toTopOf="@+id/progressBarSplash"
        android:layout_marginBottom="8dp" />

    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:id="@+id/progressBarSplash"
        app:layout_constraintLeft_toLeftOf="@+id/constraintLayout2"
        android:layout_marginStart="16dp"
        app:layout_constraintRight_toRightOf="@+id/constraintLayout2"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/constraintLayout2"
        android:layout_marginBottom="56dp"
        android:indeterminate="true"/>

    <TextView
        android:text="logging in..."
        android:layout_width="147dp"
        android:layout_height="30dp"
        android:id="@+id/textView2"
        android:textAlignment="center"
        android:fontFamily="sans-serif-medium"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="@+id/constraintLayout2"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        android:layout_marginTop="8dp"
        app:layout_constraintRight_toRightOf="@+id/constraintLayout2"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toTopOf="@+id/progressBarSplash"
        android:layout_marginBottom="8dp" />
</android.support.constraint.ConstraintLayout>