<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:id="@+id/constraintLayout3"
    android:animateLayoutChanges="true">

    <EditText
        android:layout_width="223dp"
        android:layout_height="50dp"
        android:inputType="textVisiblePassword"
        android:ems="10"
        android:id="@+id/editUsername"
        android:hint="username"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintLeft_toLeftOf="@+id/constraintLayout3"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        android:layout_marginTop="8dp"
        app:layout_constraintRight_toRightOf="@+id/constraintLayout3"
        android:layout_marginEnd="16dp" />

    <EditText
        android:layout_width="223dp"
        android:layout_height="50dp"
        android:inputType="textVisiblePassword"
        android:ems="10"
        android:id="@+id/editEmail"
        android:hint="email"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintLeft_toLeftOf="@+id/constraintLayout3"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@+id/editPassword"
        android:layout_marginTop="8dp"
        app:layout_constraintRight_toRightOf="@+id/constraintLayout3"
        android:layout_marginEnd="16dp" />

    <TextView
        android:text="login"
        android:layout_width="105dp"
        android:layout_height="34dp"
        android:id="@+id/textViewLogin"
        android:onClick="buttonLogin"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="@+id/editEmail"
        app:layout_constraintTop_toBottomOf="@+id/editEmail"
        android:layout_marginTop="8dp" />

    <TextView
        android:text="register"
        android:layout_width="105dp"
        android:layout_height="34dp"
        android:id="@+id/textViewRegister"
        android:onClick="buttonRegister"
        android:textSize="24sp"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/editEmail"
        android:layout_marginTop="8dp"
        app:layout_constraintRight_toRightOf="@+id/editEmail" />

    <EditText
        android:layout_width="223dp"
        android:layout_height="50dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editPassword"
        android:hint="password"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintLeft_toLeftOf="@+id/constraintLayout3"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@+id/editUsername"
        android:layout_marginTop="8dp"
        app:layout_constraintRight_toRightOf="@+id/constraintLayout3"
        android:layout_marginEnd="16dp" />

    <ImageView
        android:src="@drawable/fam_logo"
        android:layout_width="147dp"
        android:layout_height="132dp"
        android:id="@+id/imageView"
        app:layout_constraintLeft_toLeftOf="@+id/constraintLayout3"
        app:layout_constraintTop_toTopOf="@+id/constraintLayout3"
        android:layout_marginTop="16dp"
        app:layout_constraintRight_toRightOf="@+id/constraintLayout3" />

    <TextView
        android:text="Who's in your Fam?"
        android:layout_width="199dp"
        android:layout_height="29dp"
        android:id="@+id/textView4"
        android:textAlignment="center"
        android:fontFamily="sans-serif-medium"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="@+id/constraintLayout3"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="@+id/constraintLayout3"
        android:layout_marginTop="16dp"
        app:layout_constraintRight_toRightOf="@+id/constraintLayout3"
        android:layout_marginEnd="16dp" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:id="@+id/progressBarLogin"
        app:layout_constraintLeft_toLeftOf="@+id/constraintLayout3"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        android:layout_marginTop="8dp"
        app:layout_constraintRight_toRightOf="@+id/constraintLayout3"
        app:layout_constraintBottom_toTopOf="@+id/editUsername"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.83" />

</android.support.constraint.ConstraintLayout>