<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/constraintLayout5"
    android:background="@color/colorPrimary">

    <TextView
        android:text=">"
        android:onClick="buttonSend"
        android:layout_width="79dp"
        android:layout_height="38dp"
        android:id="@+id/textViewUpdateSend"
        android:elevation="20dp"
        android:background="@drawable/rectangle_message"
        android:fontFamily="sans-serif-medium"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintLeft_toRightOf="@+id/editUpdateMessage"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@+id/imageView4"
        app:layout_constraintRight_toRightOf="@+id/imageView4"
        app:layout_constraintBottom_toBottomOf="@+id/imageView4" />

    <EditText
        android:layout_width="223dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:imeOptions="actionSend"
        android:ems="10"
        android:id="@+id/editUpdateMessage"
        android:hint=" message"
        android:background="@drawable/rectangle_message"
        android:elevation="11dp"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="@+id/constraintLayout5"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="@+id/imageView4"
        app:layout_constraintBottom_toBottomOf="@+id/imageView4" />

    <ImageView
        android:src="@drawable/rectangle_group"
        android:layout_width="384dp"
        android:layout_height="87dp"
        android:id="@+id/imageView4"
        android:elevation="10dp"
        app:layout_constraintLeft_toLeftOf="@+id/constraintLayout5"
        app:layout_constraintBottom_toBottomOf="@+id/constraintLayout5" />

    <android.support.design.widget.FloatingActionButton
        android:src="@drawable/fab_add"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:clickable="true"
        app:fabSize="mini"
        android:id="@+id/floatingActionButtonAddMember"
        android:onClick="buttonAddUser"
        app:layout_constraintRight_toRightOf="@+id/constraintLayout5"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView4"
        android:layout_marginBottom="32dp" />

    <android.support.design.widget.FloatingActionButton
        android:src="@drawable/sign_out_fab"
        android:onClick="buttonLeaveGroup"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:clickable="true"
        app:fabSize="mini"
        android:id="@+id/floatingActionButtonLeaveGroup"
        app:layout_constraintRight_toLeftOf="@+id/floatingActionButtonAddMember"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView4"
        android:layout_marginBottom="32dp" />

    <android.support.v7.widget.RecyclerView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/constraintLayout5"
        app:layout_constraintTop_toTopOf="@+id/constraintLayout5"
        android:id="@+id/groupScreenListView"
        android:divider="@null"
        android:dividerHeight="10.0sp"
        android:padding="10dp"
        android:clipToPadding="false"
        android:background="@color/colorPrimary"/>

</android.support.constraint.ConstraintLayout>