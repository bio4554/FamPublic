<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:id="@+id/constraintLayout6">

    <TextView
        android:text="add user"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/textViewAddUserConfirm"
        android:textAlignment="center"
        android:fontFamily="sans-serif-medium"
        android:textSize="36sp"
        app:layout_constraintLeft_toLeftOf="@+id/constraintLayout6"
        android:layout_marginStart="16dp"
        app:layout_constraintRight_toRightOf="@+id/constraintLayout6"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/constraintLayout6"
        android:layout_marginBottom="16dp" />

    <EditText
        android:layout_width="221dp"
        android:layout_height="66dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editAddUser"
        android:hint="username"
        android:fontFamily="sans-serif"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="@+id/constraintLayout6"
        app:layout_constraintTop_toTopOf="@+id/constraintLayout6"
        android:layout_marginTop="16dp"
        app:layout_constraintRight_toRightOf="@+id/constraintLayout6"
        app:layout_constraintBottom_toBottomOf="@+id/constraintLayout6"
        android:layout_marginBottom="16dp"
        app:layout_constraintVertical_bias="0.58000004" />

    <ImageView
        android:src="@drawable/fam_logo"
        android:layout_width="253dp"
        android:layout_height="150dp"
        android:id="@+id/imageView5"
        app:layout_constraintLeft_toLeftOf="@+id/constraintLayout6"
        app:layout_constraintTop_toTopOf="@+id/constraintLayout6"
        android:layout_marginTop="16dp"
        app:layout_constraintRight_toRightOf="@+id/constraintLayout6"
        app:layout_constraintBottom_toTopOf="@+id/editAddUser"
        android:layout_marginBottom="8dp" />

    <TextView
        android:text="&lt;&lt;"
        android:layout_width="38dp"
        android:layout_height="37dp"
        android:id="@+id/textViewBackAddUser"
        android:textSize="36sp"
        app:layout_constraintLeft_toLeftOf="@+id/constraintLayout6"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@+id/constraintLayout6"
        android:layout_marginTop="8dp" />
</android.support.constraint.ConstraintLayout>